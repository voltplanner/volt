{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "plugins": ["simple-import-sort"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "simple-import-sort/imports": "warn",
                "simple-import-sort/exports": "warn",
                "@typescript-eslint/no-explicit-any": "off",
                "max-len": ["error", { "code": 120, "ignoreComments": true, "ignoreTrailingComments": true, "ignoreUrls": true, "ignoreRegExpLiterals": true }]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
